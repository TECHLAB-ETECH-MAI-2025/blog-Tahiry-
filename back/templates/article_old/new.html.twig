<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Créer un nouvel article</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: rgb(230, 224, 228);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .form-container {
            background-color: rgb(58, 155, 115);
        }
        .back-link {
            color: rgb(197, 35, 143);
        }
        .back-link:hover {
            color: rgb(212, 60, 60);
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container form-container p-4 rounded shadow-lg" style="max-width: 500px;">
        <h1 class="h3 mb-4 text-center">Ajouter un article</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            
            <div class="mb-3">
                {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                <div class="invalid-feedback">
                    Veuillez saisir un titre.
                </div>
            </div>
            
            <div class="mb-3">
                {{ form_label(form.content, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
            </div>
            
            <div class="mb-3">
                {{ form_label(form.categories, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.categories, {'attr': {'class': 'form-select'}}) }}
            </div>
            
            <button type="submit" class="btn btn-primary w-100 mb-3">Ajouter l'article</button>
        {{ form_end(form) }}

        <a href="{{ path('app_article_index') }}" class="back-link d-block text-center">Retour à la liste</a>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
   
</body>
</html>