

{% extends 'base.html.twig' %}

{% block title %}Modifier Article{% endblock %}

{% block body %}
    <div class="container py-5"> 
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <h1 class="mb-4 text-center text-primary">Modifier l'Article</h1> 

                
                <div class="card shadow-lg border-0 rounded-3"> 
                    <div class="card-header bg-gradient-primary text-white text-center py-3 rounded-top-3"> 
                        <h4 class="mb-0">Détails de l'article</h4>
                    </div>
                    <div class="card-body p-4">
                       
                        {{ include('article/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                    </div>
                </div>
               

                
                <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top"> 
                    
                    {{ include('article/_delete_form.html.twig') }}

                   
                    <a href="{{ path('app_category_new') }}" class="btn btn-outline-info btn-lg"> 
                        <i class="bi bi-plus-circle me-2"></i> Nouvelles Catégories 
                    </a>
                </div>

                <div class="text-center mt-3"> 
                    <a href="{{ path('app_article_index') }}" class="btn btn-link text-secondary">
                        <i class="bi bi-arrow-left me-2"></i> Retour à la liste des articles
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

