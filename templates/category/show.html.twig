                </tr>
                <tr>
                    <td>3</td>
                    <td>vie social</td>
                    <td class="actions">
                        <a href="#" class="btn-primary btn-sm">show</a>
                        <a href="#" class="btn-secondary btn-sm">edit</a>
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="mt-2 text-center">
            <a href="{{ path('app_article_index') }}" class="btn-primary">Créer de nouveau</a>
        </div>
    </div>
</body>
</html>
